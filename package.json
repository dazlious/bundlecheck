{
  "name": "bundlecheck",
  "version": "1.0.1",
  "description": "Check your application's build size and take code-splitting into account",
  "main": "index.js",
  "homepage": "https://dazlious.github.io/bundlecheck",
  "repository": {
    "type": "git",
    "url": "git@github.com:dazlious/bundlecheck.git"
  },
  "author": "Michael Duve <mduve@designmail.net>",
  "license": "MIT",
  "keywords": [
    "bundlesize",
    "performance",
    "measure",
    "check",
    "build",
    "artifact",
    "optimization"
  ],
  "bin": {
    "bundlecheck": "bin/bundlecheck"
  },
  "files": [
    "bin/",
    "src/!(*.test.js)"
  ],
  "engines": {
    "node": ">10"
  },
  "scripts": {
    "start": "nodemon index.js",
    "test": "jest",
    "lint": "eslint -c .eslintrc.js --ext .js .",
    "semantic-release": "semantic-release",
    "docs:clean": "gh-pages-clean",
    "docs:deploy": "gh-pages --message \"chore(ci): update documentation [skip ci]\" -d .out"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "semantic-release": "^17.4.4"
  },
  "dependencies": {
    "arg": "^5.0.0",
    "chalk": "^4.1.2",
    "esm": "^3.2.25",
    "fast-glob": "^3.2.7",
    "gzip-size": "^6.0.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.24"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
