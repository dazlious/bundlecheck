{
  "name": "bundlecheck",
  "version": "1.0.1",
  "description": "Check your application's build size and take code-splitting into account",
  "main": "index.js",
  "homepage": "https://dazlious.github.io/bundlecheck",
  "repository": {
    "type": "git",
    "url": "git@github.com:dazlious/bundlecheck.git"
  },
  "author": "Michael Duve <mduve@designmail.net>",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "bundlesize",
    "performance",
    "measure",
    "check",
    "build",
    "artifact",
    "optimization"
  ],
  "bin": {
    "bundlecheck": "bin/bundlecheck"
  },
  "files": [
    "bin/",
    "src/!(*.test.js)"
  ],
  "engines": {
    "node": ">10"
  },
  "scripts": {
    "start": "node --watch index.js",
    "test": "jest",
    "lint": "eslint -c .eslintrc.cjs ./src",
    "semantic-release": "semantic-release",
    "docs:clean": "gh-pages-clean",
    "docs:deploy": "gh-pages --message \"chore(ci): update documentation [skip ci]\" -d .out"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "gh-pages": "^3.2.3",
    "jest": "^29.7.0",
    "regenerator-runtime": "^0.14.1",
    "semantic-release": "^17.4.4"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.2",
    "gzip-size": "^7.0.0",
    "lodash-es": "^4.17.21"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
